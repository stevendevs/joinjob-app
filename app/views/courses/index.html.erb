<% content_for :title, "Courses" %>

<div class="w-full">

  <div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl py-4">Courses: <%= @courses.count %></h1>
  <%= link_to "New course", new_course_path, class: "px-4 py-2.5 bg-gradient-to-r from-blue-500 to-indigo-500 hover:from-blue-600 hover:to-indigo-600 text-white font-semibold shadow-md transition-all duration-200 ease-in-out block rounded-lg" %>

  </div>

  <div id="courses" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @courses.any? %>
      <% @courses.each do |course| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render course %>
       
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No courses found.</p>
    <% end %>
  </div>
</div>
