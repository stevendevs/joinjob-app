<% content_for :title, "Editing course" %>
<div class="min-h-screen bg-body pb-30">
  <!-- Header con gradiente y estilo moderno -->
  <div class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 shadow-xl border-b border-gray-700">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="h-16 flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-lg flex items-center justify-center shadow-lg">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <h1 class="font-bold text-2xl text-white">Editing Course</h1>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to 'Show', @course, class: 'group relative px-4 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-500 hover:to-blue-600 text-white font-medium rounded-lg shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl' %>
          <%= link_to 'Back', courses_path, class: 'group relative px-4 py-2.5 bg-white hover:bg-gray-50 text-gray-800 font-medium rounded-lg shadow-lg transition-all duration-300 hover:scale-105 border border-gray-200' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Container centrado con altura automática y estilo moderno -->
  <div class="max-w-screen-xl mx-auto px-4 py-8">
    <div class="flex justify-center">
      <div class="w-full max-w-3xl">
        <!-- Card principal con diseño moderno -->
        <div class="group bg-white rounded-2xl shadow-xl border border-gray-200/50 overflow-hidden hover:shadow-2xl transition-all duration-500 backdrop-blur-sm">
          <!-- Header del card -->
          <div class="bg-gradient-to-r from-gray-50 to-white px-8 py-6 border-b border-gray-200/50">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
              </div>
              <div>
                <h1 class="font-bold text-2xl text-gray-900">Edit Course</h1>
                <p class="text-gray-600 mt-1">Update your course information and content</p>
              </div>
            </div>
          </div>
          
          <!-- Contenido del formulario -->
          <div class="px-8 py-8">
            <%= render 'form', course: @course %>
          </div>
        </div>

        <!-- Información adicional -->
        <div class="mt-6 text-center">
          <p class="text-gray-500 text-sm">
            Make sure to save your changes before leaving this page
          </p>
        </div>
      </div>
    </div>
  </div>
</div>