<div class="bg-white dark:bg-gray-800 shadow-lg rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700 w-full h-80">
  <div class="h-full grid grid-rows-[auto_auto_1fr_auto_auto_auto]">
    
    <!-- Header - título -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 px-4 py-3 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <i class="fa fa-book text-blue-600 dark:text-blue-400 mr-3 text-lg"></i>
        <%= link_to course.title, course_path(course), class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-semibold text-lg truncate" %>
      </div>
    </div>

    <!-- Short Description -->
    <% if course.short_description.present? %>
      <div class="px-4 pt-2 text-gray-600 dark:text-gray-400 text-sm italic truncate">
        <%= course.short_description %>
      </div>
    <% end %>

    <!-- Descripción -->
    <div class="px-4 py-2 flex-1 min-h-0">
      <div class="h-full overflow-y-auto">
        <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
          <%= course.description %>
        </p>
      </div>
    </div>

    <!-- Fecha -->
    <div class="bg-gray-50 dark:bg-gray-700 px-4 py-2 border-t border-gray-200 dark:border-gray-600">
      <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
        <i class="far fa-clock mr-2 text-blue-500 dark:text-blue-400"></i>
        <%= course.created_at.strftime('%d-%b-%Y') %>
      </div>
    </div>

    <!-- Usuario -->
    <div class="bg-gray-50 dark:bg-gray-700 px-4 py-2">
      <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
        <i class="fa fa-chalkboard-teacher mr-2 text-blue-500 dark:text-blue-400"></i>
        <span class="truncate"><%= course.user %></span>
      </div>
    </div>

    <!-- Ubicación -->
    <% if course.location.present? %>
      <div class="bg-gray-50 dark:bg-gray-700 px-4 py-2 text-sm text-gray-600 dark:text-gray-400 border-t border-gray-200 dark:border-gray-600">
        <strong class="block font-medium mb-1">Ubicación:</strong>
        <%= course.location %>
      </div>
    <% end %>

    <!-- Botones -->
    <!-- Botones con Pundit -->
<div class="bg-gray-50 dark:bg-gray-700 px-4 py-3 border-t border-gray-200 dark:border-gray-600">
  <div class="flex justify-end gap-4">
    <!-- Ver (no restringido normalmente) -->
    <%= link_to "Ver", course, class: "text-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 text-white font-medium text-sm transition-colors" %>

    <% if policy(course).edit? %>
      <%= link_to "Editar", edit_course_path(course), class: "text-center rounded-md px-4 py-2 bg-gray-100 hover:bg-gray-200 dark:bg-gray-600 dark:hover:bg-gray-500 text-gray-700 dark:text-gray-300 font-medium text-sm transition-colors" %>
    <% end %>

    <% if policy(course).destroy? %>
      <%= button_to "Eliminar", course, method: :delete, class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600 font-medium text-sm cursor-pointer transition-colors", data: { turbo_confirm: "¿Estás seguro?" } %>
    <% end %>
  </div>
</div>

  </div>
</div>
