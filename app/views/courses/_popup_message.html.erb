<div class="w-80 flex flex-col p-2">
  <h3 class="font-bold text-lg mb-2"><%= course.title %></h3>
  
  <% if course.images.any? %>
    <%= image_tag(course.images.first, class: "h-40 w-full object-cover mb-2 rounded") %>
  <% end %>
  
  <p class="text-sm text-gray-600 mb-2">
    <%= truncate(course.description.to_plain_text, length: 100) if course.description %>
  </p>
  
  <p class="text-xs text-gray-500 mb-1">
    <strong>Ubicaci√≥n:</strong> <%= course.location %>
  </p>
  
  <p class="text-xs text-gray-500 mb-3">
    <strong>Creador:</strong> <%= course.user&.email || 'Usuario desconocido' %>
  </p>
  
  <%= link_to "Ver curso", course_path(course), 
      class: "mr-auto focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2",
      target: "_blank" %>
</div>
