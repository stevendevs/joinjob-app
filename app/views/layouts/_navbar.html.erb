<div class="max-w-7xl mx-auto px-4">
  <div class="flex items-center justify-between h-14">
    
    <!-- Logo -->
    <div class="flex items-center">
    <%= link_to "JOINJOB", root_path, class:"font-bold text-xl " %>
    </div>



   
      <%= form_tag(courses_path, method: :get) do %>
        <div>
          <%= text_field_tag :name, params[:name], autocomplete: 'off', placeholder: "Buscar" %>

          <button type="submit">
            🔍
          </button>
        </div>
      <% end %>

    

    <% if user_signed_in? %>
    <%= link_to 'Sign out',
        destroy_user_session_path,
