<div class="w-full min-h-[100vh] pt-24">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 dark:bg-gray-800 rounded-lg py-8">
    <h2 class="text-xl mb-4 text-center text-gray-800 dark:text-gray-100">Sign up</h2>

    <div class="w-3/4 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :username, class: "mb-2 text-lg text-gray-800 dark:text-gray-100" %><br />
          <%= f.text_field :username, autocomplete: "username", class: "w-full rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white p-2" %>
        </div>

        <div class="field mb-4">
          <%= f.label :email, class: "mb-2 text-lg text-gray-800 dark:text-gray-100" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white p-2" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password, class: "mb-2 text-lg text-gray-800 dark:text-gray-100" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-600 dark:text-gray-300">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white p-2" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, class: "mb-2 text-lg text-gray-800 dark:text-gray-100" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white p-2" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "bg-blue-500 w-full p-2 text-white rounded-lg cursor-pointer hover:bg-blue-700 hover:text-blue-300" %>
        </div>
      <% end %>

      <div class="flex flex-col items-center mt-4 gap-4 text-gray-800 dark:text-gray-100">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
