<div class="w-full min-h-screen bg-gray-50 flex">


  <!-- Panel derecho - Mapa -->
  <div class="flex-1 relative">
    <div class="absolute inset-0 bg-gray-100">
      <div id="map"
           class="w-full h-full"
           data-controller="map"
           data-map-x-value="<%= @map_x %>"
           data-map-y-value="<%= @map_y %>"
           data-map-center-lat-value="<%= @center_lat %>"
           data-map-center-lng-value="<%= @center_lng %>"
           data-map-data-value="<%= (@listing_data || @courses_data).to_json %>"
           data-map-courses-value="<%= @courses_data.to_json if defined?(@courses_data) %>">
      </div>
    </div>
    
    <!-- Overlay con controles del mapa (opcional) -->
    <div class="absolute top-4 right-4 bg-white rounded-lg shadow-md p-2 space-y-2">
      <button class="block w-8 h-8 bg-white hover:bg-gray-50 border border-gray-300 rounded text-gray-600 hover:text-gray-900 transition-colors text-sm font-medium">
        +
      </button>
      <button class="block w-8 h-8 bg-white hover:bg-gray-50 border border-gray-300 rounded text-gray-600 hover:text-gray-900 transition-colors text-sm font-medium">
        −
      </button>
    </div>
  </div>












  <!-- Panel izquierdo - Búsqueda y resultados -->
  <div class="w-1/3 bg-white shadow-lg flex flex-col">
    <!-- Header -->
    <div class="p-6 border-b border-gray-200">
      <h1 class="text-2xl font-semibold text-gray-900 mb-4">Explore listings nearby</h1>
      
      <!-- Barra de búsqueda -->
      <%= form_with url: explore_path, class: "w-full", method: :get do |form| %>
        <div class="space-y-3">
          <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
          <div class="flex gap-2">
            <%= form.text_field :location,
                 class: "flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                 value: params[:location],
                 placeholder: "Enter location..." %>
            <%= form.submit "Search",
                 class: "px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Resultados de búsqueda -->
    <div class="flex-1 overflow-y-auto p-6">
      <% if @courses&.any? %>
        <div class="mb-4">
          <h2 class="text-lg font-medium text-gray-900 mb-4">
            Found <%= pluralize(@courses.count, 'course') %>
          </h2>
          
          <div class="space-y-4">
            <% @courses.each do |course| %>
              <div class="bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition-colors border border-gray-200">
                <h3 class="font-medium text-gray-900 mb-1">
                  <%= link_to course.title, course, class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </h3>
                <p class="text-sm text-gray-500 mb-2">
                  <svg class="inline w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                  <%= course.location %>
                </p>
                <p class="text-sm text-gray-700 leading-relaxed">
                  <%= truncate(strip_tags(course.description), length: 120) %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <h3 class="text-sm font-medium text-gray-900 mb-1">No results found</h3>
          <p class="text-sm text-gray-500">Try searching for a different location</p>
        </div>
      <% end %>
    </div>
  </div>








</div>