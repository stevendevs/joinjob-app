
<!-- Edit Roles View -->
<% content_for :title do %>
  JoinJob / Edit Roles for <%= @user.username %>
<% end %>

<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg border border-gray-200 p-6">
    
    <div class="mb-6">
      <h1 class="text-2xl font-semibold text-gray-900">Edit Roles</h1>
      <p class="text-gray-600 mt-1">Editing roles for <%= @user.email %></p>
    </div>
    
    <%= simple_form_for @user do |f| %>
      <div class="mb-6">
        <p class="text-sm font-medium text-gray-700 mb-3">Available Roles</p>
        <div class="space-y-2">
          <%= f.collection_check_boxes :role_ids, Role.all, :id, :name do |b| %>
            <label class="flex items-center p-3 rounded border border-gray-200 hover:bg-gray-50 cursor-pointer">
              <%= b.check_box(class: "mr-3 h-4 w-4 text-blue-600 rounded border-gray-300") %>
              <span class="text-gray-900"><%= b.text %></span>
            </label>
          <% end %>
        </div>
        <%= f.error :roles, class: 'text-red-600 text-sm mt-1' %>
      </div>
      
      <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
        <%= link_to 'Cancel', users_path, 
            class: 'px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded hover:bg-gray-50 transition-colors' %>
        <%= f.button :submit, "Save Changes", 
            class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>
    
  </div>
</div>